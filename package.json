{
  "name": "@srbarba/lowdb-schema",
  "version": "0.0.0",
  "description": "Model based data management for lowdb",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build-fast": "tsup src/index.ts --format cjs,esm --external lodash,lowdb,fs,path",
    "build": "pnpm run build-fast -- --dts-resolve",
    "test": "vitest run && pnpm size",
    "test:watch": "vitest watch",
    "prepublishOnly": "pnpm run build",
    "size": "size-limit"
  },
  "license": "MIT",
  "devDependencies": {
    "@egoist/prettier-config": "1.0.0",
    "@size-limit/preset-small-lib": "^7.0.5",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.8",
    "c8": "^7.11.0",
    "lodash": "^4.17.21",
    "lowdb": "^3.0.0",
    "prettier": "2.5.1",
    "size-limit": "^7.0.5",
    "steno": "^2.1.0",
    "tsup": "5.11.9",
    "typescript": "4.5.4",
    "vitest": "0.0.124"
  },
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "1.5 kB",
      "ignore": [
        "lodash",
        "lowdb",
        "fs",
        "path"
      ]
    },
    {
      "path": "./dist/index.mjs",
      "limit": "1 kB",
      "ignore": [
        "lodash",
        "lowdb",
        "fs",
        "path"
      ]
    }
  ]
}
